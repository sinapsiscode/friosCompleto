# Environment
NODE_ENV=development
PORT=2001

# Database - Opciones para WSL
# Opción 1: host.docker.internal
DATABASE_URL="postgresql://postgres:1234@host.docker.internal:5432/serviceFrios?schema=public"

# Opción 2: IP real de Windows (descomentar y usar la IP correcta)
# DATABASE_URL="postgresql://postgres:1234@172.x.x.x:5432/serviceFrios?schema=public"

# Opción 3: localhost directo (si PostgreSQL está en WSL)
# DATABASE_URL="postgresql://postgres:1234@localhost:5432/serviceFrios?schema=public"

# JWT Secrets
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this
JWT_EXPIRES_IN=1d
JWT_REFRESH_EXPIRES_IN=7d

# Bcrypt
BCRYPT_ROUNDS=10

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_DIR=uploads

# Frontend URL
FRONTEND_URL=http://localhost:2000

# Email (optional for future)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=ServiceFrios <noreply@servicefrios.pe>

# OVH (cambiar según el proyecto)
OVH_ACCESS_KEY=tu_access_key
OVH_SECRET_KEY=tu_secret_key
OVH_BUCKET_NAME=servicefrios